[core]
	editor = vim
[diff]
	tool = vimdiff3
	# external = difft --color auto
[merge]
	conflictstyle = diff3
[rebase]
	updateRefs = true
[push]
	followTags = true
	autoSetupRemote = true
[pull]
	rebase = true
[init]
	defaultBranch = main
[color.ui]
	ui = always
[color.status]
	changed = 83
	added = 199
[color.diff]
	new = 83
[credential "https://github.com"]
	helper = !/run/current-system/sw/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = !/run/current-system/sw/bin/gh auth git-credential
